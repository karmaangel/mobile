{
  "classId": "idm.component.mobile.inputs",
  "comName": "输入框",
  "className": "Inputs",
  "comType": "common",
  "comLangue": "vue",
  "compositeAttr": [
      {
        "type": "input",
        "layoutType": "inline",
        "text": "唯一标识",
        "bindKey": "ctrlId",
        "disabled": true,
        "default": "@[packageid]",
        "desc": "",
        "helpUrl": ""
      },
      {
        "type": "group",
        "text": "基本属性",
        "desc": "提供设置组件能达到展示效果的基本属性设置信息",
        "children": [
          {
            "type": "table",
            "text": "添加页签",
            "bindKey": "tableComponent",
            "tabText": "页签[index]",
            "children": [
              {
                "type": "input",
                "layoutType": "inline",
                "text": "tab标识",
                "bindKey": "key"
              },
              {
                "type": "select",
                "layoutType": "inline",
                "text": "组件选择",
                "bindKey": "type",
                "dictionary": [
                  {
                      "label": "输入框",
                      "value": "input"
                  },
                  {
                      "label": "密码框",
                      "value": "password"
                  },
                  {
                      "label": "开关",
                      "value": "switch"
                  },
                  {
                      "label": "复选框",
                      "value": "checkbox"
                  },
                  {
                      "label": "多行文本",
                      "value": "textarea"
                  },
                  {
                    "label": "发送验证码",
                    "value": "sendPws"
                  }
                ]
              },
              {
                "type": "group",
                "text": "左侧文本",
                "desc": "提供设置组件能达到展示效果的基本属性设置信息",
                "children": [
                  {
                    "type": "switch",
                    "layoutType": "inline",
                    "text": "显示",
                    "bindKey": "labelShow",
                    "default": true
                  },
                  {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "文字",
                    "bindKey": "label",
                    "default": "label"
                  },
                  {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "宽",
                    "bindKey": "labelWidth",
                    "default": "100px"
                  },
                  {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "高",
                    "bindKey": "labelHeight",
                    "default": "auto"
                  },
                  {
                    "type": "font",
                    "layoutType": "block",
                    "text": "字体",
                    "bindKey": "labelFont"
                  },
                  {
                    "type": "box",
                    "layoutType": "block",
                    "text": "内外边距",
                    "bindKey": "labelBox"
                  }
                ]
              },
              {
                "type": "input",
                "layoutType": "inline",
                "text": "绑定字段",
                "bindKey": "field"
              },
              {
                "type": "input",
                "layoutType": "inline",
                "text": "placeholder",
                "bindKey": "placeholder"
              },
              {
                "type": "switch",
                "layoutType": "inline",
                "text": "禁用",
                "bindKey": "disabled",
                "default": false
              },
              {
                "type": "switch",
                "layoutType": "inline",
                "text": "高度自适应",
                "bindKey": "autosize",
                "default": true,
                "display": "@[type=='textarea']"
              },
              {
                "type": "input",
                "layoutType": "inline",
                "text": "最小高度",
                "bindKey": "rows",
                "default": 3,
                "display": "@[type=='textarea']"
              },
              {
                "type": "group",
                "text": "显示字数统计",
                "desc": "显示字数统计",
                "display": "@[type=='textarea']",
                "children": [
                  {
                    "type": "switch",
                    "layoutType": "inline",
                    "text": "显示字数统计",
                    "bindKey": "showWordLimit",
                    "default": true
                  },
                  {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "最大字数",
                    "bindKey": "maxlength",
                    "default": 100
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "type": "group",
        "text": "高级",
        "desc": "点击？查看高级设置用法指南",
        "children": [
   
        ]
      }
  ]
}
    