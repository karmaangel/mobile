{
  "classId": "idm.component.mobile.idealist",
  "comName": "意见列表",
  "className": "IdeaList",
  "comType": "common",
  "comLangue": "vue",
  "compositeAttr": [
    {
      "type": "input",
      "layoutType": "inline",
      "text": "唯一标识",
      "bindKey": "ctrlId",
      "disabled": true,
      "default": "@[packageid]",
      "desc": "",
      "helpUrl": ""
    },
    {
      "type": "group",
      "text": "基本属性",
      "desc": "提供设置组件能达到展示效果的基本属性设置信息",
      "children": [
        {
          "type": "switch",
          "layoutType": "inline",
          "text": "标题",
          "desc":"标题是否显示",
          "bindKey": "showImg",
          "default": true
        },
        {
          "type": "inputNumber",
          "layoutType": "inline",
          "text": "最多上传",
          "bindKey": "uploadNumber",
          "default": 3
        },
        {
          "type": "inputNumberUnit",
          "layoutType": "inline",
          "text": "文件大小",
          "bindKey": "overSize",
          "dictionary": [
              {
                  "label": "M",
                  "value": "M"
              },
              {
                  "label": "G",
                  "value": "G"
              }
          ],
          "default": {
            "inputVal": 3,
            "selectVal": "M"
          }
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "文件格式",
          "bindKey": "uploadfile",
          "default": "png,jpg,jpeg"
        },
        {
          "type": "switch",
          "layoutType": "inline",
          "text": "禁止上传",
          "desc":"禁止文件上传",
          "bindKey": "disabledImg",
          "default": false
        }
      ]
    },
    {
      "type": "group",
      "text": "样式设置",
      "desc": "点击？查看样式设置用法指南",
      "helpUrl": "",
      "children": [
        {
          "type": "inlineGroup",
          "text": "图片宽高",
          "children": [
              {
                  "type": "input",
                  "layoutType": "block",
                  "text": "宽",
                  "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
                  "bindKey": "boxWidth",
                  "width": "100%",
                  "default": "auto"
              },
              {
                  "type": "input",
                  "layoutType": "block",
                  "text": "高",
                  "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
                  "bindKey": "boxHeight",
                  "width": "200px",
                  "default": "auto"
              }
          ]
        },
        {
          "type": "box",
          "layoutType": "block",
          "text": "列表边距",
          "bindKey": "ulbox",
          "default": {
              "marginTopVal": "",
              "marginRightVal": "",
              "marginBottomVal": "",
              "marginLeftVal": "",
              "paddingTopVal": "",
              "paddingRightVal": "",
              "paddingBottomVal": "",
              "paddingLeftVal": ""
          }
        },
        {
          "type": "group",
          "text": "上传附件文字",
          "desc": "上传附件文字样式",
          "helpUrl": "",
          "children": [
            {
              "type": "font",
              "layoutType": "block",
              "text": "标题字体",
              "bindKey": "itemFontStyle",
              "default": {
                  "fontColors": {
                      "hex": "#666"
                  },
                  "fontSize": 14,
                  "fontSizeUnit": "px"
              }
            },
            {
              "type": "box",
              "layoutType": "block",
              "text": "标题间距",
              "bindKey": "itemFontMargin",
              "default": {
                  "marginTopVal": "",
                  "marginRightVal": "",
                  "marginBottomVal": "",
                  "marginLeftVal": "",
                  "paddingTopVal": "",
                  "paddingRightVal": "",
                  "paddingBottomVal": "10px",
                  "paddingLeftVal": ""
              }
            }
          ]
        }
      ]
    },
    {
      "type": "group",
      "text": "高级",
      "desc": "点击？查看高级设置用法指南",
      "children": [
        {
          "type": "input",
          "layoutType": "inline",
          "text": "上传接口",
          "bindKey": "uploadUrl",
          "default": "/ctrl/idm/api/fileupload"
        }
      ]
    }
  ]
}