{
  "classId": "idm.component.mobile.studycard",
  "comName": "学习内容卡片",
  "className": "IStudyCard",
  "comType": "common",
  "comLangue": "vue",
  "compositeAttr": [
    {
      "type": "input",
      "layoutType": "inline",
      "text": "唯一标识",
      "bindKey": "ctrlId",
      "disabled": true,
      "default": "@[packageid]",
      "desc": "",
      "helpUrl": ""
    },
    {
      "type": "group",
      "text": "基本属性",
      "desc": "提供设置组件能达到展示效果的基本属性设置信息",
      "children": [
        {
          "type": "inlineGroup",
          "text": "宽高",
          "children": [
            {
              "type": "input",
              "layoutType": "block",
              "text": "宽",
              "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
              "bindKey": "width",
              "width": "60px",
              "default": "22rem"
            },
            {
              "type": "input",
              "layoutType": "block",
              "text": "高",
              "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
              "bindKey": "height",
              "width": "60px",
              "default": "25rem"
            }
          ]
        },
        {
          "type": "border",
          "layoutType": "block",
          "text": "边框",
          "bindKey": "border",
          "default": {
            "border": {
              "top": {
                "style": "solid",
                "width": 1,
                "widthUnit": "px",
                "colors": {
                  "rgba": {
                    "r": 243,
                    "g": 243,
                    "b": 243,
                    "a": 1
                  }
                }
              },
              "right": {
                "style": "solid",
                "width": 1,
                "widthUnit": "px",
                "colors": {
                  "rgba": {
                    "r": 243,
                    "g": 243,
                    "b": 243,
                    "a": 1
                  }
                }
              },
              "bottom": {
                "style": "solid",
                "width": 1,
                "widthUnit": "px",
                "colors": {
                  "rgba": {
                    "r": 243,
                    "g": 243,
                    "b": 243,
                    "a": 1
                  }
                }
              },
              "left": {
                "style": "solid",
                "width": 1,
                "widthUnit": "px",
                "colors": {
                  "rgba": {
                    "r": 243,
                    "g": 243,
                    "b": 243,
                    "a": 1
                  }
                }
              }
            },
            "radius": {
              "leftTop": {
                "radius": 0.5,
                "radiusUnit": "rem"
              },
              "rightTop": {
                "radius": 0.5,
                "radiusUnit": "rem"
              },
              "leftBottom": {
                "radius": 0.5,
                "radiusUnit": "rem"
              },
              "rightBottom": {
                "radius": 0.5,
                "radiusUnit": "rem"
              }
            }
          }
        },
        {
          "type": "box",
          "layoutType": "block",
          "text": "内外边距",
          "bindKey": "box",
          "default": {
            "marginTopVal": "0",
            "marginRightVal": "0",
            "marginBottomVal": "0",
            "marginLeftVal": "0",
            "paddingTopVal": "0",
            "paddingRightVal": "0.5rem",
            "paddingBottomVal": "0",
            "paddingLeftVal": "0.5rem"
          }
        }
      ]
    },
    {
      "type": "group",
      "text": "样式设置",
      "desc": "点击？查看样式设置用法指南",
      "helpUrl": "",
      "children": [
        {
          "type": "font",
          "layoutType": "block",
          "text": "头部左侧文字",
          "bindKey": "headerLeftFont",
          "default": {
            "fontFamily": "impact, 'microsoft yahei'",
            "fontColors": {
              "rgba": {
                "r": 50,
                "g": 50,
                "b": 50,
                "a": 1
              }
            },
            "fontWeight": "700 Bold",
            "fontStyle": "normal",
            "fontSize": 1.5,
            "fontSizeUnit": "rem",
            "fontLineHeight": 1.5,
            "fontLineHeightUnit": "rem",
            "fontTextAlign": "center"
          }
        },
        {
          "type": "font",
          "layoutType": "block",
          "text": "头部右侧文字",
          "bindKey": "headerRightFont",
          "default": {
            "fontFamily": "impact, 'microsoft yahei'",
            "fontColors": {
              "rgba": {
                "r": 205,
                "g": 6,
                "b": 3,
                "a": 1
              }
            },
            "fontWeight": "600 Semi Bold",
            "fontStyle": "normal",
            "fontSize": 1.2,
            "fontSizeUnit": "rem",
            "fontLineHeight": 1.2,
            "fontLineHeightUnit": "rem",
            "fontTextAlign": "center"
          }
        },
        {
          "type": "border",
          "layoutType": "block",
          "text": "视频边框",
          "bindKey": "videoBorder",
          "default": {
            "border": {
              "top": {
                "style": "solid",
                "width": 1,
                "widthUnit": "px",
                "colors": {
                  "rgba": {
                    "r": 200,
                    "g": 200,
                    "b": 200,
                    "a": 1
                  }
                }
              },
              "right": {
                "style": "solid",
                "width": 1,
                "widthUnit": "px",
                "colors": {
                  "rgba": {
                    "r": 200,
                    "g": 200,
                    "b": 200,
                    "a": 1
                  }
                }
              },
              "bottom": {
                "style": "solid",
                "width": 1,
                "widthUnit": "px",
                "colors": {
                  "rgba": {
                    "r": 200,
                    "g": 200,
                    "b": 200,
                    "a": 1
                  }
                }
              },
              "left": {
                "style": "solid",
                "width": 1,
                "widthUnit": "px",
                "colors": {
                  "rgba": {
                    "r": 200,
                    "g": 200,
                    "b": 200,
                    "a": 1
                  }
                }
              }
            },
            "radius": {
              "leftTop": {
                "radius": 0.5,
                "radiusUnit": "rem"
              },
              "rightTop": {
                "radius": 0.5,
                "radiusUnit": "rem"
              },
              "leftBottom": {
                "radius": 0.5,
                "radiusUnit": "rem"
              },
              "rightBottom": {
                "radius": 0.5,
                "radiusUnit": "rem"
              }
            }
          }
        },
        {
          "type": "box",
          "layoutType": "block",
          "text": "视频内外边距",
          "bindKey": "videoBox",
          "default": {
            "marginTopVal": "0.5rem",
            "marginRightVal": "0",
            "marginBottomVal": "0.5rem",
            "marginLeftVal": "0",
            "paddingTopVal": "0",
            "paddingRightVal": "0",
            "paddingBottomVal": "0",
            "paddingLeftVal": "0"
          }
        },
        {
          "type": "font",
          "layoutType": "block",
          "text": "视频数据文字",
          "bindKey": "videoDataFont"
        },
        {
          "type": "font",
          "layoutType": "block",
          "text": "视频下方文字",
          "bindKey": "videoBottomFont"
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "数据接口",
          "bindKey": "customInterfaceUrl",
          "dataSourceUrl":"",
          "display": "@[showTodoNumber]",
          "desc": "用于获取数据源的接口地址，请按照统一标准的返回格式返回文本数据，格式如下：{\"code\":\"200\",\"data\":\"\",...}"
        }
      ]
    }
  ]
}